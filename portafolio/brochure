% Custom Box for Projects
\newtcolorbox{projectbox}[3][]{
    enhanced,
    colback=white,
    colframe=black!10,
    coltitle=black,
    title={\textbf{#2} \hfill \textcolor{goatifyPurple}{\small #3}},
    boxrule=0.5pt,
    drop shadow,
    arc=4pt,
    fonttitle=\bfseries,
    #1
}

% Custom Button Command
\newcommand{\mybutton}[2]{%
    \href{#1}{%
        \tcbox[%
            enhanced,
            colback=goatifyPurple,
            colframe=goatifyPurple,
            coltext=white,
            boxsep=2pt,
            left=6pt,
            right=6pt,
            top=2pt,
            bottom=2pt,
            arc=4pt,
            auto outer arc,
            on line
        ]{\textbf{\small #2} $\rightarrow$}%
    }%
}

